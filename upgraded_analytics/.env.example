# Environment configuration for Repository Analytics

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=analytics.log

# SolidLSP configuration
SOLIDLSP_TIMEOUT=30
SOLIDLSP_TRACE_COMMUNICATION=false

# Repository analysis limits
MAX_FILES_DEFAULT=1000
MAX_ANALYSIS_TIME_SECONDS=300

# Server configuration
DEFAULT_HOST=127.0.0.1
DEFAULT_PORT=8000

# GitHub API (optional - for enhanced repository information)
# GITHUB_TOKEN=your_github_token_here

# Temporary directory for cloning repositories
# TEMP_DIR=/tmp/repo_analytics

